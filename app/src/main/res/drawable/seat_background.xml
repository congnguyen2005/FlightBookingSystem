<!-- res/drawable/seat_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái ghế đã chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#8E24AA"/> <!-- Màu tím cho ghế đã chọn -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Trạng thái ghế chưa chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9575CD"/> <!-- Màu tím nhạt cho ghế chưa chọn -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
