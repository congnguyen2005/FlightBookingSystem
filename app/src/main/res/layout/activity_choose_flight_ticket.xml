            <RadioButton
                android:id="@+id/seatA16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghế A16" />

            <RadioButton
                android:id="@+id/seatA17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghế A17" />

            <RadioButton
                android:id="@+id/seatA18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghế A18" />

            <RadioButton
                android:id="@+id/seatA19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghế A19" />

            <RadioButton
                android:id="@+id/seatA20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghế A20" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>
