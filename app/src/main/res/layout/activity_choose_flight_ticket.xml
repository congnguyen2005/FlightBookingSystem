                android:text="Ghế A7" />

            <RadioButton
                android:id="@+id/seatA8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghế A8" />

            <RadioButton
                android:id="@+id/seatA9"
