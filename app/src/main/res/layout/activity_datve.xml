<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Datve">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐẶT VÉ"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Flight Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông Tin Chuyến Bay"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/input_departure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm đi"
            android:inputType="text"
            android:padding="8dp"
            android:background="@drawable/custom_edittex" />

        <EditText
            android:id="@+id/input_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm đến"
            android:inputType="text"
            android:padding="8dp"
            android:background="@drawable/custom_edittex"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/input_flight_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày bay (DD/MM/YYYY)"
            android:inputType="date"
            android:padding="8dp"
            android:background="@drawable/custom_edittex"
            android:layout_marginTop="8dp" />

        <!-- Passenger Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông Tin Hành Khách"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/input_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:background="@drawable/custom_edittex" />

        <EditText
            android:id="@+id/input_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày sinh (DD/MM/YYYY)"
            android:inputType="date"
            android:padding="8dp"
            android:background="@drawable/custom_edittex"
            android:layout_marginTop="8dp" />

        <!-- Gender -->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ" />
        </RadioGroup>

        <!-- Payment Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương Thức Thanh Toán"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radio_payment_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thẻ tín dụng/ghi nợ" />

            <RadioButton
                android:id="@+id/radio_payment_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán bằng tiền mặt" />

            <RadioButton
                android:id="@+id/radio_payment_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán trực tuyến" />
        </RadioGroup>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btn_confirm_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XÁC NHẬN"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/black"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
