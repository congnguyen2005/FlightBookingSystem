<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Thanh tìm kiếm -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Tìm chuyến bay, điểm đến..."
        android:padding="12dp"
        android:background="@drawable/khung"
        android:drawableStart="@drawable/search"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:drawableTint="#888888" />

    <!-- Nút chuyển hướng đến các trang chính -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_below="@id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center">

        <!-- Nút Đặt vé máy bay -->
        <Button
            android:id="@+id/btn_book_flight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Đặt vé"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6200EE"/>

        <Button
            android:id="@+id/btn_customer_support"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6200EE"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Mục Ưu đãi -->
    <TextView
        android:layout_below="@id/layout_buttons"
        android:id="@+id/ud"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ưu đãi"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- Banner Ưu đãi -->
    <ImageView
        android:id="@+id/banner_discount"
        android:layout_below="@id/ud"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/khung" />
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- Gợi ý chuyến bay -->
    <TextView
        android:layout_below="@id/banner_discount"
        android:id="@+id/gycb"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gợi ý chuyến bay"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- Danh sách gợi ý chuyến bay (dạng RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_suggestions"
        android:layout_below="@id/gycb"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="@drawable/khung"
        android:layout_margin="10dp"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"
        android:layout_above="@id/bottom_navigation" />

    <!-- Thanh điều hướng dưới cùng -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingVertical="8dp"
        android:weightSum="6">

        <!-- Trang chủ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Đặt vé -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_departure"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt vé"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Mục ưu đãi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ưu đãi"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Gợi ý -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gợi ý"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Hỗ trợ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hỗ trợ"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>