<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm chuyến bay"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textStyle="bold"/>

    <!-- CardView để chứa form tìm kiếm -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:backgroundTint="#AED6F1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tabs for "Quá khứ" and "Khứ hồi" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_qua_khu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quá khứ"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tab_khu_hoi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Khứ hồi"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Điểm đi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_edittex"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edittext_diem_di"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Điểm đi"
                    android:padding="8dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Điểm đến -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_edittex"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edittext_diem_den"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Điểm đến"
                    android:padding="8dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Ngày đi và Ngày về -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_edittex"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/edittext_ngay_di"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Ngày đi"
                        android:padding="8dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_edittex"
                    android:padding="8dp"
                    android:layout_marginStart="8dp">

                    <EditText
                        android:id="@+id/edittext_ngay_ve"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Ngày về"
                        android:padding="8dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Số người -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_edittex"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edittext_so_nguoi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Số người"
                    android:padding="8dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Loại vé -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_edittex"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edittext_loai_ve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Loại vé"
                    android:padding="8dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Tìm kiếm Button -->
            <Button
                android:id="@+id/button_tim_kiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#7D3C98"
                android:text="Tìm kiếm"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
