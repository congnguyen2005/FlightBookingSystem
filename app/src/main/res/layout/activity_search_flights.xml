<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5A623">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tìm kiếm chuyến bay"
        android:textSize="24sp"
        android:textColor="#000000" />

    <!-- Search Container -->

    <!-- Tabs for Round Trip and One Way -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="20dp"
        android:background="#80C7FA"
        android:backgroundTint="#D1E6F9"
        android:backgroundTintMode="multiply"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- One Way Tab -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Quá khứ"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- Round Trip Tab -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Khứ hồi"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Departure Input -->
    <EditText
        android:id="@+id/etDeparture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Điểm đi"

        android:paddingStart="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawablePadding="10dp" />

    <!-- Arrival Input -->
    <EditText
        android:id="@+id/etArrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Điểm đến"

        android:paddingStart="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawablePadding="10dp" />

    <!-- Date Picker Input -->
    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Ngày đi"

        android:paddingStart="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawablePadding="10dp" />

    <!-- Passenger Count Input -->
    <EditText
        android:id="@+id/etPassengerCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Số người"
        android:paddingStart="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawablePadding="10dp" />

    <!-- Ticket Type Input -->
    <EditText
        android:id="@+id/etTicketType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Loại vé"
        android:paddingStart="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawablePadding="10dp" />

    <!-- Search Button -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:background="#5D5DBA"
        android:gravity="center"
        android:padding="10dp"
        android:text="Tìm kiếm"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        />

</RelativeLayout>
