<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Hình ảnh chuyến bay -->
        <ImageView
            android:id="@+id/iv_flight_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/anh"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:contentDescription="Ảnh minh họa chuyến bay" />

        <!-- Thông tin chuyến bay -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_flight_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên chuyến bay"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_flight_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian bay: 08:00 - 11:00"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_flight_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 1.200.000 VND"
                android:textSize="16sp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
